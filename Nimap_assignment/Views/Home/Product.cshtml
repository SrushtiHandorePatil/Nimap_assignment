@model IEnumerable<Nimap_assignment.Models.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron">
    <form action="/Home/AddProduct" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Product Name</label>
                <input type="text" class="form-control" id="inputEmail4" name="productname">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Select Category</label>
                <select name="categoryid" class="form-control">
                    @foreach (var list in Model)
                    {
                        <option value="@Html.DisplayFor(ModelItem => list.id)">@Html.DisplayFor(ModelItem => list.categoryname)</option>
                    }
                </select>
            </div>
        </div>



        <input type="submit" class="btn btn-primary" value="Save">
    </form>
</div>

